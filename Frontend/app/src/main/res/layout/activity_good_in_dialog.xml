<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="340dp"
        android:layout_height="255dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:weightSum="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="120dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="收货方ID: "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/buyerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请输入收货人ID"
                android:inputType="number" />

            <Button
                android:id="@+id/buyerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_small"
                android:text="确认" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_ll_buyerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFD740"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:weightSum="5">

            <TextView
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="收货方名称: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/buyerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="kk"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_ll_buyerAddr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFD740"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="收货方地址: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/buyerAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="kk"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="120dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="配送员ID: "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/deliveryId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请输入配送员ID"
                android:inputType="number" />

            <Button
                android:id="@+id/deliveryBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_small"
                android:text="确认" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_ll_deliveryName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFD740"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:weightSum="5">

            <TextView
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="配送员名称: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/deliveryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="kk"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_ll_deliveryComp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFD740"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="配送员公司: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/deliveryComp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="kk"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/orderConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/button_small"
        android:text="生成订单"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />
</android.support.constraint.ConstraintLayout>